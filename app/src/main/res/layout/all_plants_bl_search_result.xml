<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/all_plants_bl_search_result"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingHorizontal="24dp"
	>
	
	<!-- TODO add carriola / preferiti -->
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="top"
		android:orientation="horizontal"
		>
		
		<ImageView
			android:id="@+id/all_plants_bl_search_result_image"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:layout_marginEnd="24dp"
			tools:src="@mipmap/plant_weed_3944340"
			/>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:orientation="vertical"
			>
			
			<TextView
				android:id="@+id/all_plants_bl_search_result_ortaggio"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="-4dp"
				android:textAppearance="?attr/textAppearanceTitleMedium"
				tools:text="Chips"
				/>
			
			<TextView
				android:id="@+id/all_plants_bl_search_result_varieta"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="4dp"
				android:textAppearance="?attr/textAppearanceBodySmall"
				tools:text="Chips"
				/>
		
		</LinearLayout>
		
	</LinearLayout>
	
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingVertical="16dp"
		android:paddingLeft="60dp"
		>
		
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?attr/colorOutline"
			/>
	</FrameLayout>


</LinearLayout>