<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/colorSecondaryContainer"
	android:clipChildren="false"
	android:clipToPadding="false"
	android:gravity="bottom"
	tools:context=".fragments.HomeFragment"
	>
	
	<LinearLayout
		android:id="@+id/home_bl_content"
		style="@style/Widget.App.Backdrop.BackLayer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>
		
		<include layout="@layout/home_bl_appbar" />
		
		<include layout="@layout/home_bl_drawer" />
	
	</LinearLayout>
	
	<FrameLayout
		android:id="@+id/home_profile_menu"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#44000000"
		android:elevation="24dp"
		android:paddingHorizontal="16dp"
		android:paddingTop="48dp"
		tools:visibility="visible"
		android:visibility="gone"
		>
		<include layout="@layout/home_profile_menu"/>
	</FrameLayout>
	
	<include layout="@layout/home_fl_content" />

</FrameLayout>
