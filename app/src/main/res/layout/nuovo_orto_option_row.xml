<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/nuovo_orto_option_row"
	android:layout_width="match_parent"
	android:layout_height="48dp"
	android:clickable="true"
	android:focusable="true"
	>
	
	<TextView
		android:id="@+id/nuovo_orto_option_field"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?attr/textAppearanceBodyLarge"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Opzione"
		/>
	
	<TextView
		android:id="@+id/nuovo_orto_option_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?attr/textAppearanceBodyLarge"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/nuovo_orto_row_arrow"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="value"
		/>
	
	<ImageView
		android:id="@+id/nuovo_orto_row_arrow"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingStart="10dp"
		android:paddingEnd="-4dp"
		android:src="@drawable/ic_round_keyboard_arrow_right_24"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		/>


</androidx.constraintlayout.widget.ConstraintLayout>
