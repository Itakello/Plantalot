<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="92dp"
	android:layout_marginStart="104dp"
	android:layout_marginTop="58dp"
	android:elevation="4dp"
	android:orientation="vertical"
	app:collapsedTitleTarget="@id/title_collapsed_target"
	app:layout_behavior="com.plantalot.animations.AppbarCollapsingTitle"
	xmlns:tools="http://schemas.android.com/tools"
	tools:showIn="@layout/ortaggio_fragment"
	>
	
	<TextView
		android:id="@+id/ortaggio_fl_toolbar_title"
		android:layout_width="wrap_content"
		android:layout_height="32dp"
		android:gravity="center_vertical"
		android:text="Peperoncino"
		android:textAppearance="?attr/textAppearanceTitleLarge"
		/>
	
	
	<TextView
		android:id="@+id/ortaggio_fl_toolbar_subtitle1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:text="Capsicum chinese"
		android:textAppearance="?attr/textAppearanceTitleSmall"
		/>
	
	<TextView
		android:id="@+id/ortaggio_fl_toolbar_subtitle2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="4dp"
		android:text="Solanacee"
		android:textAppearance="?attr/textAppearanceTitleSmall"
		/>
</LinearLayout>
