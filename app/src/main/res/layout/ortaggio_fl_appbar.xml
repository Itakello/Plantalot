<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.appbar.AppBarLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/ortaggio_fl_appbar_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:fitsSystemWindows="true"
	tools:showIn="@layout/ortaggio_fragment"
	>
	
	<com.google.android.material.appbar.CollapsingToolbarLayout
		android:id="@+id/ortaggio_fl_collapsing_toolbar_layout"
		android:layout_width="match_parent"
		android:layout_height="176dp"
		android:fitsSystemWindows="true"
		app:contentScrim="@color/none"
		app:expandedTitleGravity="center_horizontal|bottom"
		app:expandedTitleMarginBottom="12dp"
		app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
		app:title=" "
		>
		
		<com.google.android.material.appbar.MaterialToolbar
			android:id="@+id/ortaggio_fl_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:gravity="center_vertical"
			app:layout_collapseMode="pin"
			app:navigationIcon="@drawable/ic_round_close_24"
			app:titleCentered="true"
			>
		
		</com.google.android.material.appbar.MaterialToolbar>
		
		<Space
			android:id="@+id/image_collapsed_target"
			android:layout_width="?attr/actionBarSize"
			android:layout_height="?attr/actionBarSize"
			android:padding="12dp"
			android:layout_gravity="end"
			/>
		
		<Space
			android:id="@+id/title_collapsed_target"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			/>
	
	</com.google.android.material.appbar.CollapsingToolbarLayout>

</com.google.android.material.appbar.AppBarLayout>
