	<style name="Widget.App.Button.TextButton.FrontLayer" parent="Widget.Material3.Button.TextButton">
		<item name="android:textColor">?attr/colorPrimary</item>
		<item name="iconTint">?attr/colorPrimary</item>
	</style>
	
	<style name="Widget.App.Backdrop.FrontLayer" parent="">
		<item name="android:background">@drawable/bkg_backdrop_frontlayer</item>
		<item name="android:backgroundTint">?attr/colorSurface</item>
		<item name="android:elevation">16dp</item>
	</style>
	
	<style name="Widget.App.Button.NavButton" parent="Widget.Material3.Button.TonalButton">
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="iconPadding">0dp</item>
		<item name="iconGravity">textStart</item>
		<item name="iconSize">24dp</item>
		<item name="iconTint">?attr/colorPrimary</item>
		<item name="android:textAppearance">@style/TextAppearance.App.Toolbar</item>
		<item name="android:clickable">false</item>
		<item name="android:focusable">false</item>
		<item name="rippleColor">@color/none</item>
		<item name="android:theme">@style/ThemeOverlay.App.Tetriary</item>
	</style>
	
	<style name="ThemeOverlay.App.Tetriary" parent="Theme.App">
		<item name="colorPrimary">?attr/colorTertiary</item>
		<item name="colorPrimaryVariant">?attr/colorTertiary</item>
		<item name="colorPrimaryContainer">?attr/colorTertiaryContainer</item>
		<item name="colorSecondary">?attr/colorTertiary</item>
