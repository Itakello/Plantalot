<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlHighlight">#20ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar2" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar3" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <!--        <item name="android:windowBackground">@drawable/splash_background</item>-->
    </style>

    <style name="AppTheme.TextInputLayout" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>


    <style name="AppTheme.EditText" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">#ffffff</item>
        <item name="colorAccent">#ffffff</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="AppTheme.EditText.Black" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">#000000</item>
        <item name="colorAccent">#000000</item>
        <item name="colorControlActivated">#000000</item>
        <item name="android:textColorHint">#50000000</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RatingTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#FFFDEC00</item>
    </style>

    <style name="NumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/Black</item>
    </style>

    <style name="NumberPickerThemeWhite" parent="AppTheme">
        <item name="colorControlNormal">@color/White</item>
    </style>

    <!--  CUSTOM  -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
<!--        <item name="titleTextAppearance">@style/TextAppearance.App.Headline6</item>-->
<!--        <item name="subtitleTextAppearance">@style/TextAppearance.App.Subtitle1</item>-->
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/Black</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="elevation">0dp</item>
        <item name="titleCentered">true</item>
    </style>

