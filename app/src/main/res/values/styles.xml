	<style name="ThemeOverlay.App.BackLayer" parent="Theme.App">
		<item name="colorSurface">?attr/colorPrimaryContainer</item>
		<item name="colorOnSurface">?attr/colorOnPrimaryContainer</item>
	</style>
	
	<style name="ThemeOverlay.App.Button.TextButton.BackLayer" parent="ThemeOverlay.App.BackLayer">
		<item name="colorPrimary">?attr/colorOnSurface</item>
	</style>
	
	<style name="Widget.App.Backdrop.BackLayer" parent="">
		<item name="android:theme">@style/ThemeOverlay.App.BackLayer</item>
	</style>
	
	<style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
		<item name="titleCentered">true</item>
		<item name="subtitleCentered">true</item>
		<item name="titleTextAppearance">@style/TextAppearance.App.Toolbar</item>
	</style>
	
	<style name="Widget.App.Toolbar.BackLayer" parent="Widget.App.Toolbar">
		<item name="android:theme">@style/ThemeOverlay.App.BackLayer</item>
		<item name="android:paddingStart">0dp</item>
		<item name="android:paddingEnd">4dp</item>
	</style>
	
	<style name="TextAppearance.App.Toolbar" parent="TextAppearance.MaterialComponents.Button">
		<item name="android:textSize">16sp</item>
	</style>
	
	<style name="TextAppearance.App.TextButton.BackLayer" parent="TextAppearance.MaterialComponents.Button">
		<item name="android:textSize">14sp</item>
	</style>
	
	
	<!-- BUTTONS -->
	
	<style name="Widget.App.Button.TonalButton.IconOnly" parent="Widget.Material3.Button.TonalButton">
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="iconGravity">textStart</item>
		<item name="iconPadding">0dp</item>
	</style>
	
	<style name="Widget.App.Button.NavButton" parent="Widget.Material3.Button.TonalButton">
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="iconPadding">0dp</item>
		<item name="iconGravity">textStart</item>
		<item name="iconSize">24dp</item>
		<item name="iconTint">?attr/colorPrimary</item>
		<item name="android:textAppearance">@style/TextAppearance.App.Toolbar</item>
		<item name="android:clickable">false</item>
		<item name="android:focusable">false</item>
		<item name="rippleColor">@color/none</item>
	</style>
	
	<style name="Widget.App.Button.TextButton.IconOnly.BackLayer" parent="Widget.Material3.Button.TextButton">
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="iconGravity">textStart</item>
		<item name="iconPadding">0dp</item>
		<item name="android:theme">@style/ThemeOverlay.App.Button.TextButton.BackLayer</item>
	</style>
	
	
	<style name="Widget.App.Button.TextButton.BackLayer" parent="Widget.Material3.Button.TextButton">
		<item name="android:theme">@style/ThemeOverlay.App.Button.TextButton.BackLayer</item>
		<item name="android:textAppearance">@style/TextAppearance.App.TextButton.BackLayer</item>
		<!--		<item name="iconPadding">16dp</item>-->
	</style>
	
	<!--	<style name="Widget.App.Button.IconOnly.BackLayer" parent="Widget.App.Button.TextButton.IconOnly">-->
	<!--		<item name="android:theme">@style/ThemeOverlay.App.Button.TextButton.BackLayer</item>-->
	<!--	</style>-->
	
	
	<!-- FRONT LAYER-->
	
	<style name="Widget.App.Button.TextButton.FrontLayer" parent="Widget.Material3.Button.TextButton">
		<item name="android:textColor">?attr/colorPrimary</item>
		<item name="iconTint">?attr/colorPrimary</item>
	</style>
	
	<style name="Widget.App.Backdrop.FrontLayer" parent="">
		<item name="android:background">@drawable/bkg_backdrop_frontlayer</item>
		<item name="android:backgroundTint">?attr/colorSurface</item>
		<item name="android:elevation">16dp</item>
	</style>
	
	
	<style name="Widget.App.Chip.Suggestion" parent="Widget.Material3.Chip.Suggestion">
		<item name="android:checked">true</item>
		<item name="android:clickable">false</item>
		<item name="rippleColor">@color/none</item>
	</style>
	
